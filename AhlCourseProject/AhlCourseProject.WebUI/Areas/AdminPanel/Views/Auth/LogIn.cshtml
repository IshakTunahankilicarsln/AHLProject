            $(document).ready(function () {
                $("#btnLogIn").click(function () {
                    let userData = {
                        UserName: $("#txtUserName").val(),
                        Password: $("#txtPassword").val()
                    };

                    $.ajax({
                        url: "/AdminPanel/Auth/LogIn",
                        method: "POST",
                        dataType: "json",
                        data: { dto: userData },
                        success: function (response) {
                            if (response.isSuccess) {

                                $("#divMessages").html("<div class='alert alert-success'>Giriş Yapılıyor</div>");
                                setTimeout(function () {
                                    window.location.href = "/AdminPanel/Home/Index";
                                }, 400);

                               
                            } else {
                                let errMessages = "<div class='alert alert-danger'>";
                                for (let i = 0; i < response.messages.length; i++) {
                                    errMessages += response.messages[i] + "<br/>";
                                }
                                $("#divMessages").html(errMessages);
                            }
                        },
                        error: function () {
                            $("#divMessages").html("<div class='alert alert-danger'>Sunucu Hatası Oluştu</div>");
                        }
                    });
                });
            });
